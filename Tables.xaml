<Window x:Class="Verstka.Tables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verstka"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ViGGeL" Height="500" Width="600">
    <Grid Background="#999ddd">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" Color="LightBlue" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Таблицы" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" />


                <Button Content="Преподователи" Background="#6A5ACD" Margin="0 10" Width="250" Click="Button_Prepod_Click"/>
                <Button Content="Предметы" Background="#6A5ACD" Margin="0 10" Width="250" Click="Button_Predmet_Click"/>
                <Button Content="Нагрузка" Background="#6A5ACD" Margin="0 10" Width="250" Click="Button_Nagr_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
